{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "shared/src/*": ["../shared/src/*"]
    },
    "types": [
      "jest",
      "node"
    ],
  },
  "references": [
    {
      "path": "../shared/src"
    }
  ],
  "include": ["./**/*", "./*/", "./*/tests/*.spec.[ts, tsx]"]
}
